set nocompatible
filetype off

" General settings
set enc=utf-8
set ls=2
set incsearch
set hlsearch
set cursorline
set nu
set nowrap
syntax on

" No swap and backup files
set nobackup
set nowritebackup
set noswapfile

" Tabulation settings
set tabstop=4
set expandtab
set shiftwidth=4

" Color scheme
colorscheme darcula
